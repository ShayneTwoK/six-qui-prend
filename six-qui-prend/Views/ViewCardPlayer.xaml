<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:six_qui_prend.View"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="six_qui_prend.View.ViewCardPlayer"
             mc:Ignorable="d"
             Background="White" Height="198" Width="721">

    <Border Background="#FFC3B6B6" CornerRadius="8,8,8,8" x:Name="card2" Margin="10,10,585,10">
        <Grid Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="117"/>
                <RowDefinition Height="13"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="21"/>
                <ColumnDefinition Width="65"/>
                <ColumnDefinition Width="19"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="99" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="14"/>
            <TextBlock Grid.Column="2" Text="99" HorizontalAlignment="Center" VerticalAlignment="Center" Height="14" Width="14"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="99" VerticalAlignment="Center" HorizontalAlignment="Center" Height="14" Width="14"/>
            <TextBlock Grid.Row="2" Text="99" RenderTransformOrigin="0.5,0.5" Margin="4,2,4,-6">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="180"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Grid.Row="2" Grid.Column="2" Text="99" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Width="14" Margin="0,3,0,-6">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="180"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Grid>
    </Border>



    <!-- IList<T> list dynamic -->
</UserControl>
    
